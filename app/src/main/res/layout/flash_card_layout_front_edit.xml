<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/orange_pixel">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frontcardCardView">

        <LinearLayout
            android:id="@+id/frontcardBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/orange_pixel">


            <ImageView
                android:id="@+id/frontcardSellingDreamsLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/selling_dreams_logo"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="60dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:text="@string/flash_card_test_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@color/colorGrayText"
                android:text="@string/flash_card_front_button_text"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/orange_pixel"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>